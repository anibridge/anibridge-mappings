{
  "name": "anibridge-mappings",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": { "shellautocompletion": true },
    "ghcr.io/devcontainers/features/node:1": { "version": "25" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "astral-sh.ty",
        "charliermarsh.ruff",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "redhat.vscode-yaml",
        "yzhang.markdown-all-in-one"
      ]
    }
  },
  "postCreateCommand": "uv sync --all-packages ; (cd api && npm i)",
  "containerEnv": { "UV_LINK_MODE": "copy" }
}
